load("@build_bazel_rules_nodejs//:index.bzl", "pkg_npm")
load("@npm_bazel_typescript//:index.bzl", "ts_library")

exports_files(["tsconfig.json"])

ts_library(
    name = "cli",
    srcs = [
        "cli.ts",
    ],
    devmode_target = "es5",
    module_name = "@angular/dev-infra-private",
    tsconfig = ":tsconfig.json",
    deps = [
        "//dev-infra/commit-message",
        "//dev-infra/pullapprove",
        "//dev-infra/utils:config",
        "@npm//@types/node",
    ],
)

genrule(
    name = "package-json",
    srcs = [
        "tmpl-package.json",
        "//:package.json",
    ],
    outs = ["package.json"],
    cmd = """
        $(location //tools:inline-package-json-deps) $(location tmpl-package.json) \
            $(location //:package.json) $@
    """,
    tools = ["//tools:inline-package-json-deps"],
)

pkg_npm(
    name = "npm_package",
    visibility = ["//visibility:public"],
    deps = [
        ":cli",
        ":package-json",
        "//dev-infra/commit-message",
        "//dev-infra/ts-circular-dependencies",
    ],
)
