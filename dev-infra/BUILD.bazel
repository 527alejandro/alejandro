load("@build_bazel_rules_nodejs//:index.bzl", "pkg_npm")
load("@npm_bazel_typescript//:index.bzl", "ts_library")
load("@npm_bazel_rollup//:index.bzl", "rollup_bundle")

ts_library(
  name = "driver-utilities",
  srcs = ["//dev-infra/benchmark/driver-utilities"],
  deps = [],
)

ts_library(
    name = "cli",
    srcs = [
        "cli.ts",
    ],
    deps = [
        "//dev-infra/pullapprove",
        "@npm//@types/node",
    ],
)

rollup_bundle(
    name = "bundle",
    config_file = "rollup.config.js",
    entry_point = ":cli.ts",
    format = "umd",
    sourcemap = "hidden",
    deps = [
        ":cli",
        "@npm//rollup-plugin-commonjs",
        "@npm//rollup-plugin-node-resolve",
    ],
)

pkg_npm(
    name = "npm_package",
    srcs = [
        "BUILD.bazel",
        "package.json",
        "//dev-infra/tools:files",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":bundle",
        "//dev-infra/benchmark/driver-utilities"
    ],
    hide_build_files = True,
    substitutions = {
        "//dev-infra/": "@npm_dev_infra//",
        "//packages:types": "@npm//@angular:types",
        "//packages/benchpress": "@npm//@angular/benchpress",
        "//packages/bazel/src:esm5.bzl": "@npm_angular_bazel//src:esm5.bzl",
        "//packages/zone.js/dist:zone.js": "@npm//:node_modules/zone.js/dist/zone.js",
        "//tools:defaults.bzl": "@npm_angular_bazel//:index.bzl",
    },
)
