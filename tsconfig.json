{
    "version": "1.5.0",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "dist/js/cjs"
    },
    "exclude" : [
        "node_modules",
        "bower_components",
        "modules_dart",
        "packages",
        "dist",
        "temp",
        "tmp",
        "docs",
        "scripts",
        "typing_spec"
    ],
    "fileGlobs": [
        "./modules/**/*.ts",
        "./tools/**/*.ts",
        "!./node_modules/**",
        "!./modules_dart/**",
        "!./packages/**",
        "!./dist/**",
        "!./temp/**"
    ]
}
