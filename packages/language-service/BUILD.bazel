load("//tools:defaults.bzl", "pkg_npm", "ts_library")

package(default_visibility = ["//visibility:public"])

ts_library(
    name = "api",
    srcs = [
        "api.ts",
    ],
    deps = [
        "@npm//typescript",
    ],
)

ts_library(
    name = "plugin_entries",
    srcs = [
        "index.ts",
        "override_rename_ts_plugin.ts",
    ],
    # TODO: The language-service package and extension require CommonJS, and
    # in particular UMD to be able to override the resolution of `typescript`.
    devmode_module = "commonjs",
    deps = [
        ":api",
        "@npm//@types/node",
        "@npm//typescript",
    ],
)

pkg_npm(
    name = "npm_package",
    package_name = "@angular/language-service",
    srcs = ["package.json"],
    tags = [
        "release-with-framework",
    ],
    # Do not add more to this list.
    # Dependencies on the full npm_package cause long re-builds.
    visibility = [
        "//aio:__pkg__",
        "//aio/content/examples:__subpackages__",
        "//aio/tools/examples:__pkg__",
        "//integration:__subpackages__",
    ],
    deps = [
        ":plugin_entries",
        "//packages/language-service/bundles:language-service.js",
    ],
)
