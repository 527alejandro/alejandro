{
  "extends": "../tsconfig-build",

  "compilerOptions": {
    "paths": {
      "@angular/platform": ["../../dist/packages/platform"],
      "@angular/core": ["../../dist/packages/core"]
    }
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "dom.js",
    "flatModuleId": "@angular/platform/dom"
  }
}
